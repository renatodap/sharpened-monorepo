# Environment Configuration for CourtSync
# Copy to .env.local and configure for your environment

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=CourtSync

# =============================================================================
# DATABASE & BACKEND ADAPTERS
# =============================================================================

# Database Adapter: "supabase" or "local"
DATABASE_ADAPTER=supabase

# Supabase Configuration (when DATABASE_ADAPTER=supabase)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Local Database Configuration (when DATABASE_ADAPTER=local)
DATABASE_URL=postgresql://postgres:password@localhost:5432/courtsync_dev
DATABASE_URL_TEST=postgresql://postgres:password@localhost:5432/courtsync_test

# =============================================================================
# STORAGE ADAPTER
# =============================================================================

# Storage Adapter: "supabase" or "minio" or "local"
STORAGE_ADAPTER=supabase

# Supabase Storage (when STORAGE_ADAPTER=supabase)
NEXT_PUBLIC_SUPABASE_STORAGE_URL=your-supabase-storage-url

# MinIO Configuration (when STORAGE_ADAPTER=minio)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=courtsync-media
MINIO_USE_SSL=false

# Local Storage (when STORAGE_ADAPTER=local)
STORAGE_LOCAL_PATH=./storage

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core Features
FEATURE_COURT_BOOKING=true
FEATURE_VIDEO_CAPTURE=true
FEATURE_OPPONENT_SCOUTING=true
FEATURE_TRAVEL_COORDINATION=true
FEATURE_LIGHTNING_CHECKIN=true
FEATURE_REAL_TIME_CHAT=true

# Advanced Features (for future development)
FEATURE_AI_ANALYSIS=false
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_CALENDAR_SYNC=false
FEATURE_PUSH_NOTIFICATIONS=true

# =============================================================================
# PERFORMANCE & LIMITS
# =============================================================================

# Video Upload Configuration
VIDEO_CHUNK_BYTES=1048576
VIDEO_MAX_SIZE_MB=500
VIDEO_ALLOWED_FORMATS=mp4,mov,avi,webm

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_VIDEO_UPLOADS=10
RATE_LIMIT_MESSAGES=60

# Performance Budgets
PERFORMANCE_BUDGET_JS_KB=200
PERFORMANCE_BUDGET_LCP_MS=2500

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your-jwt-secret-here-min-32-chars
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-here-min-32-chars
SESSION_MAX_AGE=604800

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Google Calendar Integration (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Weather API (for court recommendations)
WEATHER_API_KEY=your-weather-api-key

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
DEBUG_SQL=false
DEBUG_AUTH=false

# Development Tools
NEXT_TELEMETRY_DISABLED=1
VERCEL_ANALYTICS_ID=

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/courtsync_test
PLAYWRIGHT_BASE_URL=http://localhost:3001

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Only set these in production environment
# NEXT_PUBLIC_SUPABASE_URL=your-production-supabase-url
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key
# DATABASE_URL=your-production-database-url